<% if(error != null) { %>
    <p class="form-error"><%= error %></p>
    <br>
<% } %>

<center>
<form action="" method="POST">
    <input type="hidden" name="next" value="<%= next %>">

    <label for="username">Your username</label>
    <br>
    <input type="text" placeholder="Username..." name="username" maxlength="16" id="username" value="<%= username %>">
    <br><br>
    <label for="password">Your password</label>
    <br>
    <input type="password" placeholder="Password..." name="password" maxlength="64" id="password">
    <br><br>
    <input type="submit" value="Log in!">
</form>
</center>