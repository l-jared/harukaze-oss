<% if(posts.length > 0) { %>
    <% for(post of posts) { with(post) { %>
        <div class="blogpost">
            <% if(show_title) { %>
                <div class="aligned"> 
                    <div class="blog-icon">
                        <img src="/assets/avatar/<%= author_username %>" alt="Author icon">
                    </div>
                    <div class="name2">
                        <a href="/blog/<%= slug %>">
                            <span><%= title %></span>
                        </a>
                    </div>
                </div>
            <% } %>
            <div class="blogdesc"><%- renderBBCode(content) %></div>
            <div class="blog-details">
                <span>Posted by: <a href="/contributor/<%= author_username %>"><%= author_username %></a></span> |
                <span><a href="/blog/<%= slug %>"><%= date(post.created_on) %></a><span> |
                <span><a href="/blog/<%= slug %>#comments-area">comments (<%= comments %>)</a></span>
            </div>
        </div>
    <% } } %>
<% } else { %>
    <div id="no-blogs">
        <i>There are no posts yet...</i>
        <% if(authed && user.role > 0) { %>
            <br><br>
            <a href="/blogs/new">Create a new post!</a>
        <% } %>
    </div>
    <br>
<% } %>